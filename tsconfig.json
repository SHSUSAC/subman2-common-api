{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDirs": ["src", "tests"],
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "declaration": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "tests"
  ]
}
